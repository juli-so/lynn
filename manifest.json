{
    "manifest_version": 2,

    "name": "Lynn",
    "version": "0.2.7",
    "description": "Vim-like bookmarking with tags",

    "permissions": [
      "bookmarks",
      "storage",
      "tabs"
    ],

    "icons": {
      "32":  "icon/icon-32.png",
      "64":  "icon/icon-64.png",
      "128": "icon/icon-128.png"
    },

    "options_page": "option_page/site/html/option.html",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [
          "css/lynn.css",
          "vendor/css/animate.min.css",
          "vendor/css/font-awesome.min.css"
        ],
        "js": [
          "lib/lodash.min.js",
          "lib/jquery.min.js",
          "lib/react.min.js",

          "js/shared.js",
          "js/messaging.js",
          "js/content_script.js"
        ]
      }
    ],

    "background": {
      "scripts": [
        "lib/lodash.min.js",

        "js/shared.js",
        "js/background.js"
      ]
    },

    "web_accessible_resources": [
      "vendor/font/fontawesome-webfont.woff",
      "vendor/font/OpenSans-Regular-webfont.woff"
    ]
}
