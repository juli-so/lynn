{
    "manifest_version": 2,

    "name": "lynn",
    "version": "0.1.0",
    "description": "A bookmark app.",

    "permissions": [
      "bookmarks",
      "storage",
      "tabs"
    ],

    "options_page": "html/option.html",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [
          "css/style.css",
          "vendor/css/animate.min.css",
          "vendor/css/font-awesome.css"
        ],
        "js": [
          "vendor/js/lodash.min.js",
          "vendor/js/jquery.min.js",
          "vendor/js/react.js",

          "lib/content_script/util.js",
          "lib/content_script/keymatch.js",
          "lib/content_script/message.js",
          "lib/content_script/handler.js",
          "lib/content_script/listener.js",
          "lib/content_script/action.js",
          "lib/content_script/lynn.js",
          "lib/content_script/main.js"
        ]
      }
    ],

    "background": {
      "scripts": [
        "vendor/js/lodash.min.js",

        "lib/background/tab.js",
        "lib/background/action.js",
        "lib/background/message.js",
        "lib/background/bookmark.js",
        "lib/background/log.js",
        "lib/background/main.js"
      ]
    },

    "web_accessible_resources": [
      "vendor/font/fontawesome-webfont.woff"
    ]
}
