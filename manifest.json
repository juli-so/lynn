{
    "manifest_version": 2,

    "name": "Marniak",
    "version": "0.1",
    "description": "A serious bookmark app.",

    "permissions": [
      "bookmarks",
      "storage",
      "tabs"
    ],

    "options_page": "html/option.html",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [
          "css/style.css",
          "vendor/css/animate.min.css",
          "vendor/css/font-awesome.css"
        ],
        "js": [
          "vendor/js/lodash.min.js",
          "vendor/js/jquery.min.js",
          "vendor/js/react.js",
          "lib/content_script/message.js",
          "lib/content_script/accessor.js",
          "lib/content_script/main.js"
        ]
      }
    ],

    "background": {
      "scripts": [
        "vendor/js/lodash.min.js",
        "lib/background/message.js",
        "lib/background/util.js",
        "lib/background/bookmark.js",
        "lib/background/completion.js",
        "lib/background/test.js",
        "lib/background/main.js"
      ]
    },

    "web_accessible_resources": [
      "vendor/font/fontawesome-webfont.woff"
    ]
}
